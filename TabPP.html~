	    variation1 = 'MinEver/';
	    variation2 = 'MinValueEver';
	} else {
	    variation1 = 'SET21';
	    variation2 = 'SET22';
	}
	console.log('setVaraation with '+newvar);
        variation = newvar;
	console.log('now its '+variation);
    }

